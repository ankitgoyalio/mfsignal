{
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/enforce_uv.py"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/auto_formatter.py"
					},
					{
						"type": "command",
						"command": ".claude/hooks/type_checker.py"
					},
					{
						"type": "command",
						"command": ".claude/hooks/test_runner.py"
					}
				]
			}
		]
	}
}
